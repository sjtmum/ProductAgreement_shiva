@model IEnumerable<AgMg_SandeepTrivedi.Models.Agreement>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<div class="row">
    @Html.Hidden("Idval", (string)ViewBag.alert)
</div>

<div class="row">
       <div class="well bs-component">
        <br />
        <div class="row">
            <div>
                <table class="table table-striped table-bordered table-hover"
                       id="tblAgreement"
                       cellspacing="0"
                       align="center"
                       width="100%">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>ProductGroupDesc</th>
                            <th>ProductDesc</th>
                            <th>ProductPrice</th>
                            <th>NewPrice</th>
                            <th>EffectiveDate</th>
                            <th>ExpirationDate</th>
                            <th>Active</th>
                            <th>UserId</th>
                            <th>Edit</th>
                            <th>Delete</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    var idVal = document.getElementById("Idval").value;

    if (idVal != null && idVal != "")
    {
        alert(idVal);
    }    
</script>
<script>
    $(document).ready(function () {
    $('#tblAgreement').DataTable(
    {
        "columnDefs": [
            { "width": "5%", "targets": [0] },
            { "width": "10%", "searchable": false, "orderable": false,  "targets": [7] },
            { "className": "text-center custom-middle-align", "targets": [0, 1, 2, 3, 4, 5, 6, 7] },
        ],
        "language":
            {
                "processing": "<div class='overlay custom-loader-background'><i class='fa fa-cog fa-spin custom-loader-color'></i></div>"
            },
        "processing": true,
        "serverSide": true,
        "ajax":
            {
                "url": "/Agreements/GetAgreements",
                "type": "POST",
                "dataType": "JSON"
            },
        "columns": [
                    { "data": "Id" },
                    { "data": "ProductGroupDesc" },
                    { "data": "ProductDesc" },
                    { "data": "ProductPrice" },
                    { "data": "NewPrice" },
                    { "data": "EffectiveDate" },
                    { "data": "ExpirationDate" },
                    { "data": "Active" },
                    { "data": "UserId" },
                    {
                        "render": function (data, type, full, meta)
                        { return '<a class="btn btn-info" href="/Agreements/Edit/' + full.Id + '">Edit</a>'; }
                    },
                    {
                        data: null, render: function (data, type, row)
                        {
                            return "<a href='#' class='btn btn-danger' onclick=DeleteData('" + row.Id + "'); >Delete</a>";
                        }
                    },
        ]
    });
});

 function DeleteData(Id)
        {
            if (confirm("Are you sure you want to delete Agreement?"))
            {
                Delete(Id);
            }
            else
            {
                return false;
            }
        }


        function Delete(Id)
    {
        //var url = '@Url.Content("~/")' + "Agreements/Delete";
        var url = 'Agreements/Delete';

        $.post(url, { ID: Id }, function (data)
                {
                    if (data)
                    {
                        oTable = $('#tblAgreement').DataTable();
                        oTable.draw();
                    }
                    else
                    {
                        alert("Something Went Wrong!");
                    }
                });
    }
</script>

